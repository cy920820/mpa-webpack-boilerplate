nav {
  font-size: 0;
  box-shadow: 0 1px 1px 0 rgba(0, 0, 0, .2);
  background-color: #fff;

  > a {
    display: inline-block;
    width: 88px;
    color: #333;
    font-size: 12px;
    padding: 10px 0;
    text-decoration: none;
    text-align: center;
    &.active,
    &:hover {
      color: pink;
      background-color: #ccc;
    }
  }
}
